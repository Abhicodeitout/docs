{
    "compilerOptions": {
        "module": "commonJS",
        "target": "ES5",
        "noImplicitAny": true,
        "sourceMap": true,
        "strictNullChecks": true,
        "noImplicitThis": true,
        "outDir": "./build",
        "resolveJsonModule": true,
        "moduleResolution": "Node",
        "suppressImplicitAnyIndexErrors":true,
        "jsx": "react",
        "lib": [ "ES6", "DOM"]
    },
    "include": [
        "./src/**/*",
        "./src/node_modules"
    ],
    "exclude": [
        "./node_modules"
    ],
    "compileOnSave": true
}